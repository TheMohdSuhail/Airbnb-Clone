<% layout("/layout/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-2">


            <h3>Listing Details :</h3>
            </div>
            <div class="card col-6 offset-2 show-card">
                <img src="<%= listings.image %>" class="card-img-top show-img" alt="listing-image">
                <div class="card-body">
                    <p class="card-text">
                       <b> <%= listings.title %></b><br>
                       <%= listings.description %> <br>
                       &#8377 <%= listings.price.toLocaleString("en-IN") %> <br>
                       <%= listings.location %> <br>
                       <%= listings.country %>

                       
                    </p>
                </div>
            </div>

            <br>
            <div class="btns">
                <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark edit-btn col-1 offset-2">Edit</a>

                <form action="/listings/<%= listings._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-dark  offset-3 delete-btn">Delete</button>
                </form>

            </div>
        </div>